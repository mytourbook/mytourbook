      <repository>
         <id>eclipse.nattable.2.6.0</id>                                               <layout>p2</layout>
         <url>http://download.eclipse.org/nattable/releases/2.6.0/repository/</url>
      </repository> 
      
      <repository>
         <id>eclipse.collections.11.1.0</id>                                           <layout>p2</layout>
         <url>https://download.eclipse.org/collections/11.1.0/repository/</url>
      </repository> 
      
      <repository>
         <id>eclipse.nebula.3.1.1</id>                                                 <layout>p2</layout>
         <url>https://download.eclipse.org/nebula/updates/release/3.1.1</url>
      </repository> 
      
