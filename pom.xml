<?xml version="1.0" encoding="UTF-8"?>
<project 

   xmlns                ="http://maven.apache.org/POM/4.0.0"
   xmlns:xsi            ="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation   ="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

   <modelVersion>4.0.0</modelVersion>

   <name>MyTourbook App</name>

   <artifactId>mytourbook-app</artifactId>   <groupId>net.tourbook</groupId>
                                             <version>24.5.0-SNAPSHOT</version>
   <packaging>pom</packaging>
   
   <dependencies>
      <dependency>
         <artifactId>junit-jupiter-engine</artifactId>                  <groupId>org.junit.jupiter</groupId>
                                                                        <version>5.9.3</version>
         <scope>test</scope>
      </dependency>
   </dependencies>	

   <properties>
      <tycho.version>4.0.6</tycho.version>
      <surefire.version>3.2.5</surefire.version>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>  
   </properties>

   <modules>
      <!-- artifact.bundles -->
      <module>../../mytourbook-BUILD-autocreated/core</module>
      
      <!-- artifact.mytourbook.plugins.i18 -->
      <module>../../mytourbook-BUILD-autocreated/translation</module>
   </modules>
   

   <profiles>
   
      <profile>
         <id>build-release</id>              
                                             <modules>
                                                <module>features</module>
                                                <module>build</module>
                                             </modules>
      
      </profile>

      <profile>
         <id>build-update-site</id>          
                                             <modules>
                                                <module>features</module>
                                                <module>build/build.update-site</module>
                                             </modules>
      </profile>

      <profile>
         <id>build-update-site-no-nl</id>    
                                             <modules>
                                                <module>features</module>
                                                <module>build/build.update-site-no-NL</module>
                                             </modules>
      </profile>
      
   </profiles>


   <repositories>

      <!-- Eclipse E4 web repository -->
      
      <repository>
         <id>eclipse.platform.4.31</id>                                 <layout>p2</layout>
         
         <url>https://download.eclipse.org/releases/2024-03</url>
         
<!-- 
         <url>https://download.eclipse.org/eclipse/updates/4.24-I-builds/I20220525-1800/</url>
         <url>https://download.eclipse.org/eclipse/updates/4.23-I-builds/I20220308-0310</url>
 -->
      </repository>   

      <repository>
         <id>eclipse.nattable.2.2.0</id>                                <layout>p2</layout>
         <url>http://download.eclipse.org/nattable/releases/2.2.0/repository/</url>
      </repository> 
      
      <repository>
         <id>eclipse.nebula.3.0.0</id>                                  <layout>p2</layout>
         <url>https://download.eclipse.org/nebula/releases/3.0.0/</url>
      </repository> 
      
      <!-- IMPORTANT: Keep that tag in a single line as it is commented out during the GitHub build 
      <repository> <id>eclipse.4.23.nl</id> <layout>p2</layout> <url>file:build/build.eclipse.4.23.nl.repo</url> </repository>
      -->

      <!-- IMPORTANT: Keep that tag in a single line as it is commented out during the GitHub build 
      
         [ERROR] Cannot resolve dependencies of project net.tourbook:feature.net.tourbook.ext.eclipse.nl:eclipse-feature:4.23.0-SNAPSHOT
         [ERROR]  with context {osgi.os=linux, osgi.ws=gtk, org.eclipse.update.install.features=true, osgi.arch=x86_64, org.eclipse.update.install.sources=true}
         [ERROR]   Software being installed: feature.net.tourbook.ext.eclipse.nl.feature.group 4.23.0.qualifier
         [ERROR]   Missing requirement: org.eclipse.equinox.p2.artifact.repository.nl_cs 4.26.0.v20230220105658 requires 'osgi.bundle; org.eclipse.equinox.p2.artifact.repository 0.0.0' but it could not be found
         [ERROR]   Cannot satisfy dependency: feature.net.tourbook.ext.eclipse.nl.feature.group 4.23.0.qualifier depends on: org.eclipse.equinox.p2.iu; org.eclipse.equinox.p2.artifact.repository.nl_cs 0.0.0: See log for details      
      
      <repository>
          <id>eclipse.nl.4.26</id>
