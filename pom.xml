<?xml version="1.0" encoding="UTF-8"?>
<project 

   xmlns                ="http://maven.apache.org/POM/4.0.0"
   xmlns:xsi            ="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation   ="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

   <modelVersion>4.0.0</modelVersion>

   <name>MyTourbook App</name>

   <artifactId>mytourbook-app</artifactId>   <groupId>net.tourbook</groupId>
                                             <version>25.11.0-SNAPSHOT</version>
   <packaging>pom</packaging>
   
   <dependencies>
      <dependency>
         <artifactId>junit-jupiter</artifactId>                  <groupId>org.junit.jupiter</groupId>
                                                                 <version>6.0.0-RC3</version>
         <scope>test</scope>
      </dependency>
   </dependencies>	

   <properties>
      <tycho.version>5.0.0</tycho.version>     
      <surefire.version>3.5.4</surefire.version>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>  
   </properties>

   <modules>
      <!-- artifact.bundles -->
      <module>../../mytourbook-BUILD-autocreated/core</module>
      
      <!-- artifact.mytourbook.plugins.i18 -->
      <module>../../mytourbook-BUILD-autocreated/translation</module>
   </modules>
   

   <profiles>
   
      <profile>
         <id>build-release</id>
         <modules>
            <module>features</module>
            <module>build</module>
         </modules>
      
      </profile>

      <profile>
         <id>build-update-site</id>
         <modules>
            <module>features</module>
            <module>build/build.update-site</module>
         </modules>
      </profile>

      <profile>
         <id>build-update-site-no-nl</id>
         <modules>
            <module>features</module>
            <module>build/build.update-site-no-NL</module>
         </modules>
      </profile>
      
   </profiles>


   <repositories>

      <!-- Eclipse E4 web repository -->
      
